<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".crop.CropAddFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="always">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="25dp"
            android:background="@color/card_light_purple"
            android:fontFamily="sans-serif-condensed-light"
            android:padding="5dp"
            android:text="@string/selected_plant"
            android:textSize="@dimen/subtitle_font_size"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cropAdd_SelectedPlantContainer"
            android:layout_width="0dp"
            android:layout_height="95dp"
            app:layout_constraintEnd_toEndOf="@+id/textView3"
            app:layout_constraintStart_toStartOf="@+id/textView3"
            app:layout_constraintTop_toBottomOf="@+id/textView3">

            <include
                android:id="@+id/noPlantSelected"
                layout="@layout/add_crop_empty_plant_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

            <include
                android:id="@+id/selectedPlantItem"
                layout="@layout/add_plant_rcv_item"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/card_light_purple"
            android:fontFamily="sans-serif-condensed-light"
            android:padding="5dp"
            android:text="@string/number_of_plants"
            android:textSize="@dimen/subtitle_font_size"
            app:layout_constraintEnd_toEndOf="@+id/cropAdd_SelectedPlantContainer"
            app:layout_constraintStart_toStartOf="@+id/cropAdd_SelectedPlantContainer"
            app:layout_constraintTop_toBottomOf="@+id/cropAdd_SelectedPlantContainer" />

        <EditText
            android:id="@+id/addCrop_numberOfPlantsEditText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:outlineProvider="bounds"
            android:outlineSpotShadowColor="@color/card_light_purple"
            app:layout_constraintEnd_toEndOf="@+id/cropAdd_SelectedPlantContainer"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/textView7"
            app:layout_constraintTop_toBottomOf="@+id/textView7" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:background="@color/card_light_purple"
            android:fontFamily="sans-serif-condensed-light"
            android:padding="5dp"
            android:text="Date Planted"
            android:textSize="@dimen/subtitle_font_size"
            app:layout_constraintEnd_toEndOf="@+id/addCrop_numberOfPlantsEditText"
            app:layout_constraintStart_toStartOf="@+id/addCrop_numberOfPlantsEditText"
            app:layout_constraintTop_toBottomOf="@+id/addCrop_numberOfPlantsEditText" />

        <CalendarView
            android:id="@+id/addCrop_datePlantedCalendarView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="@+id/addCrop_numberOfPlantsEditText"
            app:layout_constraintStart_toStartOf="@+id/textView9"
            app:layout_constraintTop_toBottomOf="@+id/textView9" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>